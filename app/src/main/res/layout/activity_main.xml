<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="24dp"
    android:clipChildren="false"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Toolbar at top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <TextView
        android:id="@+id/fillCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available fills: 1"
        android:layout_below="@id/main_toolbar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/fillTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next fill in: 10s"
        android:layout_below="@+id/main_toolbar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="180dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <!-- Total rewired counter -->
    <TextView
        android:id="@+id/rewiredStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brain cells rewired: 0 out of 90"
        android:layout_below="@id/fillCounter"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <!-- NEW: container for your rank title+desc -->
    <LinearLayout
        android:id="@+id/rankContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rewiredStatus"
        android:layout_marginTop="40dp"
        android:orientation="vertical"
        android:gravity="center">

    <!-- 1) Big first word -->
    <TextView
        android:id="@+id/rankTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        android:text=""/>

    <!-- 2) Smaller description on next line -->
    <TextView
        android:id="@+id/rankDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text=""/>

</LinearLayout>

    <!-- BrainView below the toolbar -->
    <com.example.braincoloringapp.BrainView
        android:id="@+id/brainView"
        android:layout_below="@id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <EditText
        android:id="@+id/userNoteEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttonGroup"
        android:layout_marginBottom="36dp"
        android:hint="Enter Goal"
        android:maxLines="1"
        android:inputType="textCapSentences"
        android:gravity="center"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="36dp"
        android:background="@null"
        android:imeOptions="actionDone"/>

    <LinearLayout
        android:id="@+id/buttonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"/>

        <Button
            android:id="@+id/hallsOfFameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/halls_of_fame"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/achievementsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/achievements"/>

    </LinearLayout>



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireworkView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:background="#80000080"
        app:lottie_rawRes="@raw/fireworks"
        app:lottie_loop="false"
        app:lottie_autoPlay="false" />

    <!-- ①  the little pull-tab, right-hand side, vertically centred -->
    <TextView
        android:id="@+id/supportTab"
        android:layout_width="40dp"
        android:layout_height="160dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="0dp"
        android:layout_marginRight="0dp"
        android:background="@drawable/support_tab_bg"
        android:text="S\nu\np\np\no\nr\nt"
        android:textColor="@android:color/white"
        android:textSize="16sp"
        android:gravity="center"
        android:includeFontPadding="false" />

    <!--  ───── NEW SUPPORT OVERLAY GOES HERE ───── -->
    <FrameLayout
        android:id="@+id/supportOverlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <View
            android:id="@+id/supportScrim"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#88000000"/>

        <LinearLayout
            android:id="@+id/supportPanel"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="16dp"
            android:background="@drawable/support_tab_bg"
            android:elevation="6dp">

            <Button
                android:id="@+id/donateButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Support developer"/>

            <TextView
                android:id="@+id/supportMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="hello"
                android:textSize="18sp"/>
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
