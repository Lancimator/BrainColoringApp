<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <!-- Toolbar at top -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />
    <TextView
        android:id="@+id/fillCounter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Available fills: 1"
        android:layout_below="@id/main_toolbar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <TextView
        android:id="@+id/fillTimer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next fill in: 10s"
        android:layout_below="@+id/main_toolbar"
        android:layout_marginTop="16dp"
        android:layout_marginStart="180dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>

    <!-- Total rewired counter -->
    <TextView
        android:id="@+id/rewiredStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Brain cells rewired: 0 out of 90"
        android:layout_below="@id/fillCounter"
        android:layout_marginTop="12dp"
        android:layout_marginStart="8dp"
        android:textSize="18sp"
        android:textColor="@android:color/black"/>


    <!-- BrainView below the toolbar -->
    <com.example.braincoloringapp.BrainView
        android:id="@+id/brainView"
        android:layout_below="@id/main_toolbar"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- NEW: Rank text -->
        <TextView
            android:id="@+id/rankText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/brainView"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:textSize="18sp"
            android:gravity="center"
            android:text=""/>  <!-- start blank; set in code -->

    <LinearLayout
        android:id="@+id/buttonGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:padding="16dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/resetButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reset"/>

        <Button
            android:id="@+id/hallsOfFameButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/halls_of_fame"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"/>

        <Button
            android:id="@+id/achievementsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/achievements"/>
    </LinearLayout>


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/fireworkView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:lottie_rawRes="@raw/fireworks"
        app:lottie_loop="false"
        app:lottie_autoPlay="false" />

</RelativeLayout>
