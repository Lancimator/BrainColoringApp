<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/hallsOfFameRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HallsOfFameActivity">

    <!-- Fixed title at top -->
    <TextView
        android:id="@+id/hallsOfFameTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/halls_of_fame"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="56dp"/>

    <!-- Scrollable container for the log -->
    <ScrollView
        android:id="@+id/hallsOfFameScroll"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/hallsOfFameTitle"
        android:layout_marginTop="16dp"
        android:padding="16dp">

        <!-- This TextView holds the entire log -->
        <TextView
            android:id="@+id/hallsOfFameMessage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:lineSpacingExtra="4dp"/>
    </ScrollView>

</RelativeLayout>
